<!--[if gt IE 8]><!--> <html class="no-js" lang="es" ng-app> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <title>{% block title %}La Niña del Mezcal{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('css/fuentes.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="{{ asset('js/html5shiv.js') }}"></script>
        <![endif]-->
        {% if app.environment == 'prod' %}
         <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-44187248-1', 'interactivevalley.com');
            ga('send', 'pageview');

         </script>
         {% else %}   
            {{app.environment}}
         {% endif %} 
    </head>
    <body>
        <!--[if lt IE 8]>
        <p class=chromeframe>Your browser is <em>ancient!</em> 
        <a href="http://browsehappy.com/">Upgrade to a different browser</a> or 
        <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.
        </p>
        <![endif]-->

        {% set route = app.request.get('_route') %}
        {% set about_la_nina = "" %}
        {% set mezcal = "" %}
        {% set find_la_nina = "" %}
        {% set frontend_contact = "" %}
        {% if route == "about_la_nina" %}
            {% set about_la_nina = "class='active'" %}
        {% elseif route == "find_la_nina" %}
            {% set find_la_nina = "class='active'" %}
        {% elseif route == "botella_espadin" or route == "botella_primario" %}
            {% set mezcal = "class='active'" %}
        {% elseif route == "frontend_contacto" %}
            {% set frontend_contact = "class='active'" %}
        {% endif %}


        <div id="contenedor">
            <header>
                <figure id="logo">
                    <a href="{{path('homepage',{'_locale':locale})}}">
                        <img src="{{asset('images/keyarts/logo_header.png')}}" alt="">
                    </a>
                </figure>
                <span id="nav-left">
                    &nbsp;
                </span>
                <nav>
                    <ul>
                        <li>
                            <a href="{{path('about_la_nina',{'_locale':locale})}}" {{about_la_nina|raw}}>{% trans %}about la niña{% endtrans %}</a>
                        </li>
                        <li>
                            <a href="{{path('botella_espadin',{'_locale':locale})}}" {{mezcal|raw}}>{% trans %}the mezcal{% endtrans %}</a>
                            <!--ul>
                                <li><a href="{{path('botella_espadin',{'_locale':locale})}}">Espadin</a></li>
                                <li><a href="{{path('botella_primario',{'_locale':locale})}}">Primario mazcal joven</a></li>
                            </ul-->    
                        </li>
                        <li>
                            <a href="http://blog.laninadelmezcal.com" target="_blank">{% trans %}the blog{% endtrans %}</a>
                        </li>
                        <li><a href="http://blog.laninadelmezcal.com/events/" target="_blank">{% trans %}events{% endtrans %}</a></li>
                        <li><a href="{{path('find_la_nina',{'_locale':locale})}}"  {{find_la_nina|raw}}>{% trans %}find la niña{% endtrans %}</a></li>
                        <li>
                            <a href="?shop">{% trans %}shop online{% endtrans %}</a>
                            <ul>
                                <li><a target="_blank" href="http://bacus-3.myshopify.com/products/la-ni-a-del-mezcal-espadin">México</a></li>
                                <li><a target="_blank" href="http://www.klwines.com/detail.asp?sku=1120562">USA</a></li>
                            </ul>
                        </li>

                        <li><a href="{{path('frontend_contacto',{'_locale':locale})}}"  {{frontend_contact|raw}}>{% trans %}contact{% endtrans %}</a></li>
                    </ul>
                </nav>
                <span id="nav-right">
                    &nbsp;
                </span>
                <div id="lenguajes">
                    <span id="lenguaje-es">
                        <a href="{{path(route,{'_locale':'es'})}}" style="cursor: pointer;">
                            español  
                        </a>
                    </span>
                    <span id="lenguaje-en">
                        <a href="{{path(route,{'_locale':'en'})}}" style="cursor: pointer;">
                            english
                        </a>
                    </span>
                </div>
                <div id="redes-sociales">
                    <figure id="red-social-twitter">
                        <a href="https://twitter.com/LaNinadelMezcal" target="_blank">
                            <img src="{{asset('images/keyarts/twitter.png')}}" alt=""/>    
                        </a>
                    </figure>
                    <figure id="red-social-facebook">
                        <a href="https://www.facebook.com/ninadelmezcal" target="_blank">
                            <img src="{{asset('images/keyarts/facebook.png')}}" alt=""/>    
                        </a>
                    </figure>
                </div>
            </header>
        {% block body %}{% endblock %}
            <footer>
                <div id="contenido-footer">
                    {{ render(controller("FrontendBundle:Default:piePagina")) }}
                </div>
                <figure id="desarrollado">
                    <a href="mailto:rafael@interactivevalley.com">
                        <img src="{{asset('images/interactivevalley.png')}}" alt="developed for Interactive Valley">
                    </a>
                </figure>
                <figure id="facebook-footer">
                    <a href="https://www.facebook.com/ninadelmezcal" target="_blank">
                        <img src="{{ asset('images/keyarts/facebook.png') }}" alt="facebook">
                    </a>
                </figure>
                <figure id="twitter-footer">
                    <a href="https://twitter.com/LaNinadelMezcal" target="_blank">
                        <img src="{{ asset('images/keyarts/twitter.png') }}" alt="twitter">
                    </a>
                </figure>
            </footer>    
        </div>
        {% block javascripts %}
        <script type="text/javascript" src="{{asset('js/jquery-1.8.3.min.js')}}"></script>
        <script type="text/javascript" src="{{asset('js/main.js')}}"></script>
        {% endblock %}

        
    </body>
</html>
